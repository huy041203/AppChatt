<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemMessage"
        android:layout_gravity="start"
        >
<!--        Message-->
        <TextView
            android:id="@+id/twMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="@dimen/message_text_size"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/message_padding_horizontal"
            android:paddingVertical="@dimen/message_padding_vertical"
            android:layout_marginHorizontal="@dimen/message_margin_horizontal"
            android:layout_marginBottom="8dp"
            />
<!--        Reaction-->
        <ImageView
            android:id="@+id/reaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reaction_care"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            />
    </FrameLayout>



</LinearLayout>